  "scripts": {
    "start": "COOKIE_SECRET=bad_secret PGUSER=postgres PGDATABASE=aliens npx nodemon ./src/index.js",
    "start:production": "./src/index.js",
    "db:migrate": "DATABASE_URL=postgres://postgres@localhost:5432/aliens node-pg-migrate",
